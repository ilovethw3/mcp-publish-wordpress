# Production Environment Configuration for MCP WordPress Publisher v2.1
# Copy this file to .env.production and fill in the actual values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL database connection
DATABASE_URL=postgresql+asyncpg://mcpuser:CHANGE_DB_PASSWORD@postgres:5432/mcpdb_v21

# =============================================================================
# REDIS CONFIGURATION (Session & Caching)
# =============================================================================
REDIS_URL=redis://:CHANGE_REDIS_PASSWORD@redis:6379/0

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Main application secret key (generate with: openssl rand -hex 32)
SECRET_KEY=CHANGE_THIS_SECRET_KEY_TO_RANDOM_64_CHAR_STRING

# JWT secret for authentication tokens
JWT_SECRET_KEY=CHANGE_THIS_JWT_SECRET_KEY_TO_RANDOM_64_CHAR_STRING

# Encryption key for sensitive data (generate with: openssl rand -hex 32)
ENCRYPTION_KEY=CHANGE_THIS_ENCRYPTION_KEY_TO_RANDOM_64_CHAR_STRING

# NextAuth.js secret for web UI authentication
NEXTAUTH_SECRET=CHANGE_THIS_NEXTAUTH_SECRET_TO_RANDOM_64_CHAR_STRING
NEXTAUTH_URL=https://yourdomain.com

# =============================================================================
# MCP SERVER CONFIGURATION
# =============================================================================
# Server transport and networking
MCP_TRANSPORT=sse
MCP_PORT=8000
MCP_SSE_PATH=/sse
MCP_SERVER_NAME="MCP WordPress Publisher v2.1 Production"

# =============================================================================
# MULTI-AGENT CONFIGURATION
# =============================================================================
# Enable multi-agent support (configured via web UI)
MULTI_AGENT_MODE=true
AGENT_CONFIG_PATH=/app/config/agents.yml

# =============================================================================
# MULTI-SITE CONFIGURATION
# =============================================================================
# Enable multi-site support (configured via web UI)
MULTI_SITE_MODE=true
SITE_CONFIG_PATH=/app/config/sites.yml

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO
ENABLE_AUDIT_LOGGING=true

# =============================================================================
# MONITORING & METRICS
# =============================================================================
# Enable monitoring features
ENABLE_METRICS=true

# Grafana admin password
GRAFANA_PASSWORD=CHANGE_GRAFANA_PASSWORD

# =============================================================================
# SECURITY FEATURES
# =============================================================================
ENABLE_RATE_LIMITING=true
ENABLE_API_VERSIONING=true

# =============================================================================
# FEATURE FLAGS
# =============================================================================
DEBUG=false
ENABLE_HEALTH_CHECKS=true

# =============================================================================
# WEB UI CONFIGURATION
# =============================================================================
WEB_UI_PORT=3000
NEXT_PUBLIC_MCP_SERVER_URL=http://mcp-server:8000
NEXT_PUBLIC_MCP_SSE_PATH=/sse
NEXT_PUBLIC_ENABLE_REALTIME=true
NEXT_PUBLIC_POLLING_INTERVAL=30000